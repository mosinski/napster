<%= form_for(@user_session || UserSession.new) do |f| %>

  <div class="logowanie_domowa">
    <%= f.text_field :username, :class => 'logowanie', :placeholder => 'Nazwa Konta' %>
    <%= f.password_field :password, :class => 'logowanie', :placeholder => 'Hasło' %>
    <%= f.check_box :remember_me, :title => 'Zapamiętaj Mnie', :id => 'zapamietaj_mnie' %>
    <%= f.button :Zaloguj, :class => 'btn btn-success'%>
  </div>
<% end %>
